{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "Topics": [ "users.created", "orders.created", "dead-letter", "users.status-changed", "orders.cancelled", "orders.completed" ],
    "GroupId": "eventBridge-group"
  },
  "AllowedOrigins": [ "http://localhost:3000" ],
  "AllowedHosts": "*"
}