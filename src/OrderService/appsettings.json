{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "Topics": [ "users.status-changed" ],
    "GroupId": "orderService-group"
  },
  "USER_SERVICE_BASE_URL": "http://userservice:8080",
  "Outbox": {
    "KafkaBootstrapServers": "kafka:9092",
    "ServiceUrls": [
      "http://userservice:8080",
      "http://orderservice:8080"
    ],
    "PollIntervalMs": 5000,
    "MaxRetries": 5
  }
}